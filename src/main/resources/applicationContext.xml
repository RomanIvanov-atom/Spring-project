<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="musicRockBean"
          class="project.spring.RockMusic">
    </bean>
    <bean id="musicJazzBean"
          class="project.spring.JazzMusic">
    </bean>
    <bean id="musicClassicalBean"
          class="project.spring.ClassicalMusic">
    </bean>
    
    <bean id="musicBean"
          class="project.spring.ClassicalMusic">
    </bean>

    <!-- для того, чтобы подгрузить данные в плеер с файла, а не самому прописывать
    [при этом classpath - это папка resources]      -->
    <context:property-placeholder location="classpath:musicPlayer.properties"/>


    <bean id="musicPlayer"
          class="project.spring.MusicPlayer">
        <property name="music" ref="musicBean"/>

        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>

</beans>